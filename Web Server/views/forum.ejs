<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bhumitra - Community Forum</title>
    <link rel="stylesheet" href="/stylesheets/forum.css">
</head>
<body>
    <header>
        <img src="/images/bhumitra-nobg.png" alt="Bhumitra Logo" class="logo">
    </header>

    <div class="container">
        <h1>Community Forum</h1>

        <div class="new-post-section">
            <h2>Create New Post</h2>
            <form action="/community-forum/" method="POST">
                <div class="form-group">
                    <label for="post_title">Title:</label>
                    <input type="text" id="post_title" name="post_title" required>
                </div>
                <div class="form-group">
                    <label for="post_content">Content:</label>
                    <textarea id="post_content" name="post_content" rows="5" required></textarea>
                </div>
                <div class="form-group">
                    <label for="post_tags">Tags:</label>
                    <input type="text" id="post_tags" name="tags" placeholder="Comma-separated tags">
                </div>
                <button type="submit">Post</button>
            </form>
        </div>

        <div class="posts-section">
            <h2>Posts</h2>
            <div id="postsContainer">
                <% posts.forEach(post => { %>
                    <div class="post" id="post_<%= post._id %>">
                        <h3><%= post.post_title %></h3>
                        <p><%= post.post_content %></p>
                        <p><strong>Tags:</strong> <%= post.tags.join(', ') %></p>
                        <p><small>Posted by: <%= post.user_id.username %> on <%= post.createdAt.toDateString() %></small></p>

                        <div class="comments">
                            <h4>Comments</h4>
                            <% post.comments.forEach(comment => { %>
                                <div class="comment">
                                    <p><strong><%= comment.user_id.username %>:</strong> <%= comment.comment_content %></p>
                                </div>
                            <% }) %>
                            <form action="/community-forum/<%= post._id %>/comments" method="POST">
                                <div class="form-group">
                                    <label for="comment_text_<%= post._id %>">Add Comment:</label>
                                    <textarea id="comment_text_<%= post._id %>" name="comment_content" rows="2" required></textarea>
                                </div>
                                <button type="submit">Comment</button>
                            </form>
                        </div>

                        <div class="vote-section">
                            <form action="/community-forum/<%= post._id %>/vote" method="POST">
                                <button type="submit" name="vote_type" value="upvote">Upvote</button>
                                <button type="submit" name="vote_type" value="downvote">Downvote</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; 2024 Bhumitra. All rights reserved.</p>
    </footer>
</body>
</html>
