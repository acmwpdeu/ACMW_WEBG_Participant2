<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bhumitra - Crop Health Monitoring</title>
    <link rel="stylesheet" href="/stylesheets/crop_health.css">
</head>

<body>
    <header>
        <img src="/images/bhumitra-nobg.png" alt="Bhumitra Logo" class="logo">
    </header>

    <div class="container">
        <h1>Crop Health Monitoring</h1>

        <div class="upload-section">
            <form action="/crop-health/analyze" method="POST">
                <div class="form-group">
                    <label>Enter Crop Image URL:</label>
                    <input type="url" id="crop_image_url" name="crop_image_url" placeholder="Enter image URL" required>

                </div>
                <div class="image-preview">
                    <img id="crop-image-preview" src="/images/bhumitra.png" alt="Crop Image Preview">
                </div>
                <button type="submit">Analyze Crop Health</button>
            </form>
        </div>

        <div class="result-section">
            <% if (health_result) { %>
                <h2>Health Status</h2>
                <ul>
                    <% health_result.forEach(result => { %>
                        <li><strong><%= result.name %>:</strong> <%= (result.value * 100).toFixed(2) %>%</li>
                    <% }); %>
                </ul>
            <% } %>
        </div>

        <div class="history-section">
            <h2>Previous Analyses</h2>
            <ul>
                <% previous_analyses.forEach(analysis => { %>
                    <li>
                        <img src="<%= analysis.image_url %>" alt="Previous Crop Image" class="history-image">
                        <p><strong>Date:</strong> <%= analysis.date %></p>
                        <p><strong>Result:</strong> <%= analysis.result %></p>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>

    <footer>
        <p>&copy; 2024 Bhumitra. All rights reserved.</p>
    </footer>
</body>

</html>
